{
  "manifest_version": 3,
  "name": "Smart Sleep Coach",
  "description": "Track browser usage & get AI-powered sleep tips with bedtime reminders.",
  "version": "2.3",
  "permissions": ["storage", "alarms", "notifications", "idle", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon128.png",
    "default_title": "Smart Sleep Coach"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["alarm.mp3", "icon128_glow.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
